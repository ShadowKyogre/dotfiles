pcm.mic {
	type plug
	slave.pcm "hw:U0x46d0x807,0,0"
	route_policy "duplicate"
	ttable {
		0 {
			0 1.0
		}
		1 {
			0 1.0
		}
	}
}

pcm.mout {
  type plug
  slave.pcm mdev
  #slave.pcm "hw:0,0"
  route_policy "duplicate"
}

pcm.mdev {
        type multi

		slaves {
			a {
				pcm "hw:Loopback,0,0"
				#pcm "mic"
				channels 2
			}
			b {
				pcm "hw:0,0"
				channels 2
			}
		}
		
		bindings {
			0 {
				slave a 
				channel 0
			}
			1 {
				slave a
				channel 1
			}
			2 {
				slave b
				channel 0
			}
			3 {
				slave b
				channel 1
			}
		}
}
